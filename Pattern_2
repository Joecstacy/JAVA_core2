import java.util.*;
public class Lec5q1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan= new Scanner(System.in);
		System.out.print("Enter the range : ");
		int n=scan.nextInt();
		for(int i=1;i<=n;i++) {
			for(int j=1;j<=(n-i);j++) {
				System.out.print(" ");
				}
			for(int k=1; k<=i;k++) {
				System.out.print("*");
			}
			System.out.println();
		}

	}
}
